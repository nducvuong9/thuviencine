<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.video.thuviencine" version="1.0.0" name="Thuvien Cine" provider-name="tvcn">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
    </requires>

    <if condition="System.AddonVersion('xbmc.python', '2.24.0')">
        <requires>
            <import addon="xbmc.python" version="2.24.0" />
        </requires>
    </if>

    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Thuvien Cine - Addon for watching movies/TV shows</summary>
        <description lang="en">Browse and watch latest Movies and TV shows from streaming sites.</description>
        <platform>all</platform>
        <license>GPL-3.0-or-later</license>
        <source>https://github.com/tvcn/thuviencine</source>
    </extension>
</addon>